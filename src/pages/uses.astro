      {
        name: "SuperChinese",
        description: "Chinese Learning",
        href: "https://superchinese.com/",
        icon: "superchinese",
        tags: [ToolTag.Subscription]
      }
    ]}
  />
  <p class="text-muted-foreground text-sm">
    Discover other developers' setups at
    <Link href="https://uses.tech/" external underline>uses.tech</Link>.
  </p>
</CommonLayout>
