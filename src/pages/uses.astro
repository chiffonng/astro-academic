      },

      {
        name: "Notion",
        description: "Project Management & Calendar",
        href: "https://www.notion.so/",
        icon: "mingcute:notion-line",
        tags: [ToolTag.Free]
      },
      {
        name: "Reclaim.ai",
        description: "AI Calendar",
        href: "https://reclaim.ai/",
        icon: "reclaim",
        tags: [ToolTag.Subscription, ToolTag.Favorite]
      }
    ]}
  />
  <ToolSection
    title="Setapp Subscription Bundle"
    tools={[
      {
        name: "Spark Mail",
        description: "Email",
        href: "https://sparkmailapp.com/",
        icon: "mingcute:mail-ai-line",
