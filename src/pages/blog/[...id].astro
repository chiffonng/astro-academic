---
import { render } from "astro:content"

import { PostManager } from "@/lib/post-manager"
import BlogPostLayout from "@/layouts/BlogPostLayout.astro"

export async function getStaticPaths() {
  const posts = await PostManager.getInstance().getAllPostsAndSubposts()
  return posts.map((post) => ({
    params: { id: post.id },
    props: post
  }))
}

const post = Astro.props
const currentPostId = Astro.params.id as string
const { Content } = await render(post)

// Get all blog data with single optimized call
const postContext = await PostManager.getInstance().getPostContext(currentPostId)

if (!postContext) {
  throw new Error(`Blog post not found: ${currentPostId}`)
}
---

<BlogPostLayout postContext={postContext}>
  <Content />
</BlogPostLayout>
