---
import type { PostMeta } from "@/lib/blog/types"
import Head from "@/components/layout/Head.astro"

interface Props {
  metadata: PostMeta
}

const { metadata } = Astro.props
const { title, description, image, createdAt, updatedAt, tags, authors } = metadata

// Get the primary author for SEO
const primaryAuthor = authors?.[0]?.name
const imagePath = typeof image === "string" ? image : image?.src
---

<Head
  title={title}
  description={description}
  image={imagePath}
  type="article"
  publishedTime={createdAt}
  modifiedTime={updatedAt}
  author={primaryAuthor}
  tags={tags}
  section="Blog"
>
  <link href="https://cdn.jsdelivr.net/npm/katex@0.16.21/dist/katex.min.css" rel="stylesheet" />
</Head>
