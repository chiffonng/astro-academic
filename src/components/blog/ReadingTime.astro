---
interface Props {
  /** Word count to calculate reading time from */
  wordCount: number
  /** Show "read" suffix (default: true) */
  showReadSuffix?: boolean
  /** Additional CSS classes */
  class?: string
}

const { wordCount, showReadSuffix = true, class: className } = Astro.props

// Calculate reading time in minutes (220 words per minute)
const minutes = Math.max(1, Math.round(wordCount / 220))

// Convert to W3C valid duration string (PT5M for 5 minutes)
const duration = `PT${minutes}M`

// Format display text
const displayText = showReadSuffix ? `${minutes} min read` : `${minutes} min`
---

<time datetime={duration} class={className}>
  {displayText}
</time>
