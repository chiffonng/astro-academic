---
import { cn } from "@/lib/utils"
import Icon from "@/components/base/Icon.astro"

export interface BreadcrumbItem {
  href?: string
  label: string
  icon?: string
}

interface Props {
  items: BreadcrumbItem[]
  class?: string
}

const { items, class: className } = Astro.props
---

<nav aria-label="Breadcrumb navigation" class={cn("flex w-full", className)}>
  <ol
    class="text-muted-foreground flex flex-wrap items-center gap-1.5 text-sm break-words sm:gap-2.5"
  >
    <li class="inline-flex items-center gap-1.5">
      <a href="/" class="hover:text-foreground flex items-center transition-colors">
        <Icon name="home" size="1.25rem" />
      </a>
    </li>

    {
      items.map((item, index) => (
        <>
          <li role="presentation" aria-hidden="true">
            <Icon name="chevron-right" />
          </li>
          <li class="inline-flex items-center gap-1.5">
            {index === items.length - 1 ? (
              <span
                role="link"
                aria-disabled="true"
                aria-current="page"
                class="text-foreground flex items-center font-normal"
              >
                {item.icon && <Icon name={item.icon} size="1.25rem" class="mr-1" />}
                {item.label}
              </span>
            ) : (
              <a href={item.href} class="hover:text-foreground flex items-center transition-colors">
                {item.icon && <Icon name={item.icon} size="1.25rem" class="mr-1" />}
                <span class="leading-none">{item.label}</span>
              </a>
            )}
          </li>
        </>
      ))
    }
  </ol>
</nav>
